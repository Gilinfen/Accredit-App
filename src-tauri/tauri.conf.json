{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Accredit",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.Accredit.dev",
      "icon": [
        "icons/icon.iconset/icon_32x32.png",
        "icons/icon.iconset/icon_128x128.png",
        "icons/icon.iconset/icon_128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": false,
        "decorations": true,
        "title": "Accredit",
        "width": 1200,
        "height": 800,
        "visible": false
      }
    ]
  }
}
